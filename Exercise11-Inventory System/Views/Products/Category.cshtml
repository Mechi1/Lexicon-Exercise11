@model PagedList.IPagedList<Exercise11_Inventory_System.Models.ProductCategory>

@{
    //ViewBag.Title = "Category";
}

<h2>Category</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table" id="productList">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.First().Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().Shelf)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().Count)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Shelf)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Count)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }
</table>
<div class="pagedList">
    @Html.PagedListPager(Model, page => Url.Action("Category", "Products", new { category = ViewBag.Title, page }),
        PagedListRenderOptions.OnlyShowFivePagesAtATime)
</div>

<div>
    @Html.ActionLink("Back to Search", "CategorySearch", new { category = "" }, null) |
    @Html.ActionLink("Back to Index", "Index")
</div>
